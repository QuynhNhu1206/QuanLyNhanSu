@model IEnumerable<DATA.Entity.HOPDONG>
@{
    ViewBag.Title = "Hợp đồng";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
<link rel="stylesheet" href="https://cdn.datatables.net/2.0.7/css/dataTables.dataTables.min.css" />
<main>
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Danh sách hợp đồng</h4>
                <div class="card-tools">
                    <div class="row">

                        <div class="col-md-6">
                            <br>
                            <div form class="btn-group input-group-sm">
                                <a href="Createhd" class="btn btn-danger" style="background-color:orange">
                                    <i style="font-size: 20px; text-align:left" class="fas fa-plus red_color"></i>
                                    <span>Thêm</span>
                                </a>
                            </div>

                            <div class="btn-group input-group-sm" ;">
                                <a href="Createhd" class="btn btn-danger" style="background-color:orange">
                                    <i style="font-size: 20px; text-align:left" class="fas fa-pen-to-square red_color"></i>
                                    <span>Chỉnh sửa</span>
                                </a>
                            </div>

                            <div class="btn-group input-group-sm">
                                <a href="Createhd" class="btn btn-danger" style="background-color:orange">
                                    <i style="font-size: 20px; text-align:left" class="fas fa-trash red_color"></i>
                                    <span>Xóa</span>
                                </a>
                            </div>
                            <br />
                        </div>

                    </div>
                </div>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-hover table-bordered text-nowrap" style="width:100%; text-justify:auto;" id="myTable" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayName("Mã hợp đồng")
                            </th>
                            <th>
                                @Html.DisplayName("Mã nhân viên")
                            </th>
                            <th>
                                @Html.DisplayName("Loại hợp đồng")
                            </th>
                            <th>
                                @Html.DisplayName("Ngày kí hợp đồng")
                            </th>
                            <th>
                                @Html.DisplayName("Ngày kết thúc hợp đồng")
                            </th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr style="text-align:left; justify-content:center">
                                <th>
                                    @item.MAHD
                                </th>
                                <th>
                                    @item.NHANVIEN.HOTEN
                                </th>
                                <th>
                                    @item.LOAIHD
                                </th>
                                <th>
                                    @item.NGAYKIHD
                                </th>
                                <th>
                                    @item.NGAYKTHD
                                </th>
                                
                            </tr>
                        }

                    </tbody>
                </table>
            </div>


        </div>
    </div>
</main>
</main>
@section scripts{
    <script src="https://cdn.datatables.net/2.0.7/js/dataTables.min.js"></script>
    <script>
        new DataTable('#myTable');
    </script>
}

