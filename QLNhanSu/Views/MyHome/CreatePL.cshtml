@model DATA.Entity.PHIEULUONG

@{
    ViewBag.Title = "CreatePL";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card-header">
        <h4 class="card-title">Nhập thông tin phiếu lương</h4>
        <div class="card-tools">

        </div>
    </div>

    <div class="card-body">
        <form action="/MyHome/Createpl" method="post">
            <div class="row">
                <div class="col-md-6">
                    <br>
                    <div class="btn-group input-group-sm">
                        <button name="btnLuu" id="btnLuu" type="submit" class="btn btn-block btn-default" style="background-color:orange">
                            <i style="font-size: 20px; text-align:left" class="fas fa-save red_color"></i>
                            <span>Lưu</span>
                        </button>
                    </div>

                    <div class="btn-group input-group-sm">
                        <a href="luong" class="btn btn-danger" style="background-color:orange">
                            <i style="font-size: 20px; text-align:left" class="fas fa-circle-xmark red_color"></i>
                            <span>Hủy</span>
                        </a>
                    </div>
                    <br />
                </div>

            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelForModel("Mã lương", htmlAttributes: new { @class = "control-label col-md-auto" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.MAL, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelForModel("Mã nhân viên", htmlAttributes: new { @class = "control-label col-md-auto" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.MANV, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelForModel("Mã nghỉ phép", htmlAttributes: new { @class = "control-label col-md-auto" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.MANP, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelForModel("Mã chức vụ", htmlAttributes: new { @class = "control-label col-md-auto" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.MACV, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelForModel("Hệ số lương", htmlAttributes: new { @class = "control-label col-md-auto" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.HESOLUONG, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelForModel("Lương cơ sở", htmlAttributes: new { @class = "control-label col-md-auto" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.LUONGCOSO, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelForModel("Phụ cấp", htmlAttributes: new { @class = "control-label col-md-auto" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.PHUCAP, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelForModel("Thưởng", htmlAttributes: new { @class = "control-label col-md-auto" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.THUONG, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelForModel("Ứng lương", htmlAttributes: new { @class = "control-label col-md-auto" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.UNGLUONG, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                </div>
            </div>
        </form>
    </div>
}

