@model IEnumerable<DATA.Entity.PHIEULUONG>
@{
    ViewBag.Title = "Lương";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<link rel="stylesheet" href="https://cdn.datatables.net/2.0.7/css/dataTables.dataTables.min.css" />
<main>
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Danh sách phiếu lương</h4>
                <div class="card-tools">
                    <div class="row">

                        <div class="col-md-6">
                            <br>
                            <div form class="btn-group input-group-sm">
                                <a href="Createpl" class="btn btn-danger" style="background-color:orange">
                                    <i style="font-size: 20px; text-align:left" class="fas fa-plus red_color"></i>
                                    <span>Thêm</span>
                                </a>
                            </div>

                            <div class="btn-group input-group-sm" ;">
                                <a href="Createpl" class="btn btn-danger" style="background-color:orange">
                                    <i style="font-size: 20px; text-align:left" class="fas fa-pen-to-square red_color"></i>
                                    <span>Chỉnh sửa</span>
                                </a>
                            </div>

                            <div class="btn-group input-group-sm">
                                <a href="Createpl" class="btn btn-danger" style="background-color:orange">
                                    <i style="font-size: 20px; text-align:left" class="fas fa-trash red_color"></i>
                                    <span>Xóa</span>
                                </a>
                            </div>
                            <br />
                        </div>

                    </div>
                </div>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-hover table-bordered text-nowrap" style="width:100%; text-justify:auto;" id="myTable" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayName("Mã lương")
                            </th>
                            <th>
                                @Html.DisplayName("Tên nhân viên")
                            </th>
                            <th>
                                @Html.DisplayName("Loại nghỉ phép")
                            </th>
                            <th>
                                @Html.DisplayName("Tên chức vụ")
                            </th>
                            <th>
                                @Html.DisplayName("Hệ số lương")
                            </th>
                            <th>
                                @Html.DisplayName("Lương cơ sở")
                            </th>
                            <th>
                                @Html.DisplayName("Phụ cấp")
                            </th>
                            <th>
                                @Html.DisplayName("Thưởng")
                            </th>
                            <th>
                                @Html.DisplayName("Ứng lương")
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr style="text-align:left; justify-content:center">
                            <th>
                                @item.MANP
                            </th>
                            <th>
                                @item.NHANVIEN.HOTEN
                            </th>
                            <th>
                                @item.PHIEUNGHIPHEP.LOAINGHIPHEP
                            </th>
                            <th>
                                @item.CHUCVU.TENCHUCVU
                            </th>
                            <th>
                                @item.HESOLUONG
                            </th>
                            <th>
                                @item.LUONGCOSO
                            </th>
                            <th>
                                @item.PHUCAP
                            </th>
                            <th>
                                @item.THUONG
                            </th>
                            <th>
                                @item.UNGLUONG
                            </th>

                        </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>
@section scripts{
    <script src="https://cdn.datatables.net/2.0.7/js/dataTables.min.js"></script>
    <script>
        new DataTable('#myTable');
    </script>
}

